extends layout

block body

  .login
    .row
     div.login-header Sign In
     .login-div
        form.bs-example.form-horizontal(method='post', action='')
          fieldset 
            if error
              .alert.alert-dismissable.alert-danger.login-fail
                button.close(type='button', data-dismiss='alert') &times;
                p.
                  #{error}
            .form-group
              label.col-lg-4.control-label.login-label(for='username') Username
              .col-lg-7
                input#username.form-control(type='email', name='username', placeholder='Email', autofocus)
            .form-group
              label.col-lg-4.control-label.login-label(for='password') Password
              .col-lg-7
                input#password.form-control(type='password', name='password', placeholder='Password')
            .form-group
              .col-lg-2.col-lg-offset-4
                button.btn.btn-success(type='submit') Sign In
            .form-group
              .col-lg-offset-4
                label.link 
                  u Forget username or password ?
                
              
                  
