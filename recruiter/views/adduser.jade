extends layout

block body
  .dashboard
    .row
      .col-lg-2#nav-container
        include leftnavigation.jade
      .col-lg-10#data-container
        .well-nm
          //- nav.navbar.navbar-default
          //-   .container-fluid 
          //-     ul.nav.navbar-nav
          //-       li 
          //-         a(href='/adduser',role='button') Add Users
          //-       li 
          //-         a(href='/viewuser',role='button') View Users
          //-       li
